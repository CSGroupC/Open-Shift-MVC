    <fieldset disabled="disabled">
        <div class="container-main">
            <div>
                <div class="form-group">
                    <div>@Html.LabelFor(model => model.User.Email)</div>
                    <div>@Html.TextBoxFor(model => model.User.Email, new { @class = "form-control" })</div>
                    <div>@Html.ValidationMessageFor(model => model.User.Email)</div>
                </div>

                <div class="form-group">
                    <div>@Html.LabelFor(model => model.User.Phonenumber)</div>
                    <div>@Html.TextBoxFor(model => model.User.Phonenumber, new { @class = "form-control" })</div>
                    <div>@Html.ValidationMessageFor(model => model.User.Phonenumber)</div>
                </div>

                <div class="form-group">
                    <div>@Html.LabelFor(model => model.User.Birthday)</div>
                    <div>@Html.TextBoxFor(model => model.User.Birthday, "{0:yyyy/MM/dd}", new { @class = "form-control" })</div>
                    <div>@Html.ValidationMessageFor(model => model.User.Birthday)</div>

                </div>
                <div class="form-group">
                    <div>@Html.LabelFor(model => model.User.FirstName)</div>
                    <div>@Html.TextBoxFor(model => model.User.FirstName, new { @class = "form-control" })</div>
                    <div>@Html.ValidationMessageFor(model => model.User.FirstName)</div>
                </div>
                <div class="form-group">
                    <div>@Html.LabelFor(model => model.User.LastName)</div>
                    <div>@Html.TextBoxFor(model => model.User.LastName, new { @class = "form-control" })</div>
                    <div>@Html.ValidationMessageFor(model => model.User.LastName)</div>
                </div>

            </div>
            <div>

                <div class="form-group">
                    <div>@Html.LabelFor(model => model.User.AddressLine1)</div>
                    <div>@Html.TextBoxFor(model => model.User.AddressLine1, new { @class = "form-control" })</div>
                    <div>@Html.ValidationMessageFor(model => model.User.AddressLine1)</div>
                </div>

                <div class="form-group">
                    <div>@Html.LabelFor(model => model.User.AddressLine2)</div>
                    <div>@Html.TextBoxFor(model => model.User.AddressLine2, new { @class = "form-control" })</div>
                    <div>@Html.ValidationMessageFor(model => model.User.AddressLine2)</div>
                </div>

                <div class="form-group">
                    <div>@Html.LabelFor(model => model.User.PostalCode)</div>
                    <div>@Html.TextBoxFor(model => model.User.PostalCode, new { @class = "form-control" })</div>
                    <div>@Html.ValidationMessageFor(model => model.User.PostalCode)</div>
                </div>

            </div>


            <div>
                <div class="form-group">
                    <div>@Html.LabelFor(model => model.User.StoreID, "Store")</div>
                    <div>@Html.DropDownListFor(model => model.User.StoreID, new SelectList(Model.Lists.StoreLocationList, "Value", "Text", (int)Model.User.StoreID), new { @title = "Select your Location.", @class = "form-control" })</div>
                    <div>@Html.ValidationMessageFor(model => model.User.StoreID)</div>
                </div>
                <div class="form-group">
                    <div>@Html.LabelFor(model => model.User.IsManager, "Are You a Manager?")</div>
                    <div>@Html.DropDownListFor(model => model.User.IsManager, new SelectList(Model.Lists.IsManager, "Value", "Text", (int)Model.User.IsManager), new { @title = "Select your managerial status.", @class = "form-control" })</div>
                    <div>@Html.ValidationMessageFor(model => model.User.IsManager)</div>
                </div>

                <div class="form-group">
                    <div>@Html.LabelFor(model => model.User.EmployeeNumber)</div>
                    <div>@Html.TextBoxFor(model => model.User.EmployeeNumber, new { @class = "form-control" })</div>
                    <div>@Html.ValidationMessageFor(model => model.User.EmployeeNumber)</div>
                </div>

                <div class="form-group">
                    <div>@Html.LabelFor(model => model.User.AssociateTitle, "Associate Title")</div>

                    <div>@Html.DropDownListFor(model => model.User.AssociateTitle, new SelectList(Model.Lists.AssociateTitle, "Value", "Text", (int)Model.User.AssociateTitle), new { @title = "Select your title.", @class = "form-control" })</div>
                    <div>@Html.ValidationMessageFor(model => model.User.AssociateTitle)</div>
                </div>

            </div>

            @*<div value="Notification">
                @*<input type="checkbox" name="Notifications" value="Manager"> Are you a manager?<br>*@
            @*<input type="checkbox" name="Notifications" value="Email"> Receive Email Notifications<br>
                <input type="checkbox" name="Notifications" value="Textr"> Receive Text Notificatons<br>*@
            @*</div>*@
        </div>
    </fieldset>

    <br />

    <div>
        <button class="btn btn-primary" id="btnUpdate" name="btnSubmit" value="update"><i class='far fa-edit'></i> Edit</button>
        <button class="btn btn-primary" id="btnResetPassword" name="btnSubmit" value="resetpassword">Reset Password </button>

        <button class="btn-outline-danger float-right" id="btnDelete" name="btnSubmit" value="delete"><i class='far fa-trash-alt'></i> Delete Account</button>
    </div>

}

