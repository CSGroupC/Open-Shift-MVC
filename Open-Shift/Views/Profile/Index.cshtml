@model Open_Shift.Models.Home
@{
    /**/

    ViewBag.Title = "";
    Layout = "~/Views/Shared/UserLayout.cshtml";
}
<h3 position="fixed">Kotetsu Scheduling App</h3>
<p>Associate Profile</p>
@using (Html.BeginForm("Index", "Profile", FormMethod.Post, new { enctype = "multipart/form-data" }))
{
    <div id="group-image">
        @if (Model.ViewUser.UserImage.ImageID > 0)
        {
            <div class="image-container">
                <img class="thumbnail2" src="@string.Concat("data:Image/", Model.ViewUser.UserImage.FileExtension, ";base64,", Model.ViewUser.UserImage.BytesBase64)" />
            </div>
        }
    </div>
    <div class="container">
        <div class="section-bottom">
            <div class="bold">First Name</div>
            <div>@Model.ViewUser.FirstName</div>
        </div>
        <div class="section-bottom">
            <div class="bold">Last Name</div>
            <div>@Model.ViewUser.LastName</div>
        </div>
        <div class="section-bottom">
            <div class="bold">Birthday</div>
            <div>@Model.ViewUser.Birthday</div>
        </div>
        <div class="section-bottom">
            <div class="bold">AddressLine1</div>
            <div>@Model.ViewUser.AddressLine1</div>
        </div>
        <div class="section-bottom">
            <div class="bold">AddressLine2</div>
            <div>@Model.ViewUser.AddressLine2</div>
        </div>
        <div class="section-bottom">
            <div class="bold">Postal Code</div>
            <div>@Model.ViewUser.PostalCode</div>
        </div>
        <div class="section-bottom">
            <div class="bold">Store Location</div>
            <div>@Model.ViewUser.StoreLocation</div>
        </div>
        <div class="section-bottom">
            <div class="bold">Employee Number</div>
            <div>@Model.ViewUser.EmployeeNumber</div>
        </div>
        <div class="section-bottom">
            <div class="bold">Associate Title</div>
            <div>@Model.ViewUser.AssociateTitle</div>
        </div>
        <div class="section-bottom">
            <div class="bold">Phone Number</div>
            <div>@Model.ViewUser.Phonenumber</div>
        </div>
        <div class="section-bottom">
            <div class="bold">Email</div>
            <div>@Model.ViewUser.Email</div>
        </div>
        <div class="section-bottom">
            <div class="bold">User ID</div>
            <div>@Model.ViewUser.UserID</div>
        </div>
    </div>

        <div class="inline">
            <button class="button-action" id="btnUpdate" name="btnSubmit" value="update"><i class='far fa-save'></i> Update</button>
            <button class="button-cancel" id="btnDelete" name="btnSubmit" value="delete"><i class='far fa-trash-alt'></i> Delete Profile</button>
            <button class="button-action" id="btnResetPassword" name="btnSubmit" value="resetpassword">Reset password </button>
        </div>
 
}

<script type="text/javascript">
    $("#User_FirstName").focus();
</script>


