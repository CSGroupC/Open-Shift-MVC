@model Open_Shift.Models.Home

@{
    ViewBag.Title = "";
    Layout = "~/Views/Shared/UserLayout.cshtml";
}
<script src="~/Scripts/jquery-3.3.1.min.js"></script>
<script src="~/Scripts/jquery.validate.min.js"></script>
<script src="~/Scripts/jquery.validate.unobtrusive.min.js"></script>

<h1 class="mb-4">Sign Up</h1>
@using (Html.BeginForm("SignUp", "Profile", FormMethod.Post, new { @class = "signup-form" }))
{
    <div class="container-main">

        <div value="Contact Info">
            <div class="form-group">
                <div>@Html.LabelFor(model => model.User.Email)</div>
                <div>@Html.TextBoxFor(model => model.User.Email, new { @class = "form-control" })</div>
                <small class="validation-message form-text text-danger">@Html.ValidationMessageFor(model => model.User.Email)</small>
            </div>
            <div class="form-group">
                <div>@Html.LabelFor(model => model.User.ConfirmEmail)</div>
                <div>@Html.TextBoxFor(model => model.User.ConfirmEmail, new { @class = "form-control" })</div>
                <small class="validation-message form-text text-danger">@Html.ValidationMessageFor(model => model.User.ConfirmEmail)</small>
            </div>

            <div class="form-group">
                <div>@Html.LabelFor(model => model.User.Password)</div>
                <div>@Html.TextBoxFor(model => model.User.Password, new { type = "password", @class = "form-control" })</div>
                <small class="validation-message form-text text-danger">@Html.ValidationMessageFor(model => model.User.Password)</small>
            </div>

            <div class="form-group">
                <div>@Html.LabelFor(model => model.User.Phonenumber)</div>
                <div>@Html.TextBoxFor(model => model.User.Phonenumber, new { @class = "form-control" })</div>
                <small class="validation-message form-text text-danger">@Html.ValidationMessageFor(model => model.User.Phonenumber)</small>
            </div>

            <div class="form-group">
                <div>@Html.LabelFor(model => model.User.Birthday)</div>
                <div>@Html.TextBoxFor(model => model.User.Birthday, "{0:yyyy/MM/dd}", new { @class = "form-control" })</div>
                <small class="validation-message form-text text-danger">@Html.ValidationMessageFor(model => model.User.Birthday)</small>

            </div>

        </div>
        <div>
            <div class="form-group">
                <div>@Html.LabelFor(model => model.User.FirstName)</div>
                <div>@Html.TextBoxFor(model => model.User.FirstName, new { @class = "form-control" })</div>
                <small class="validation-message form-text text-danger">@Html.ValidationMessageFor(model => model.User.FirstName)</small>
            </div>
            <div class="form-group">
                <div>@Html.LabelFor(model => model.User.LastName)</div>
                <div>@Html.TextBoxFor(model => model.User.LastName, new { @class = "form-control" })</div>
                <small class="validation-message form-text text-danger">@Html.ValidationMessageFor(model => model.User.LastName)</small>
            </div>

            <div class="form-group">
                <div>@Html.LabelFor(model => model.User.AddressLine1)</div>
                <div>@Html.TextBoxFor(model => model.User.AddressLine1, new { @class = "form-control" })</div>
                <small class="validation-message form-text text-danger">@Html.ValidationMessageFor(model => model.User.AddressLine1)</small>
            </div>

            <div class="form-group">
                <div>@Html.LabelFor(model => model.User.AddressLine2)</div>
                <div>@Html.TextBoxFor(model => model.User.AddressLine2, new { @class = "form-control" })</div>
                <small class="validation-message form-text text-danger">@Html.ValidationMessageFor(model => model.User.AddressLine2)</small>
            </div>

            <div class="form-group">
                <div>@Html.LabelFor(model => model.User.PostalCode)</div>
                <div>@Html.TextBoxFor(model => model.User.PostalCode, new { @class = "form-control" })</div>
                <small class="validation-message form-text text-danger">@Html.ValidationMessageFor(model => model.User.PostalCode)</small>
            </div>

            <button class="btn btn-primary form-control full-content" id="btnSignUp" name="btnSubmit" value="signup">Sign-Up</button>
        </div>


        <div value="Store Info">
            <div class="form-group">
                <div>@Html.LabelFor(model => model.User.StoreID, "Store")</div>
                <div>@Html.DropDownListFor(model => model.User.StoreID, new SelectList(Model.Lists.StoreLocationList, "Value", "Text", (int)Model.User.StoreID), new { @title = "Select your Location.", @class = "form-control" })</div>
                <small class="validation-message form-text text-danger">@Html.ValidationMessageFor(model => model.User.StoreID)</small>
            </div>
            <div class="form-group">
                <div>@Html.LabelFor(model => model.User.IsManager, "Are You a Manager?")</div>
                <div>@Html.DropDownListFor(model => model.User.IsManager, new SelectList(Model.Lists.IsManager, "Value", "Text", (int)Model.User.IsManager), new { @title = "Select your managerial status.", @class = "form-control" })</div>
                <small class="validation-message form-text text-danger">@Html.ValidationMessageFor(model => model.User.IsManager)</small>
            </div>

            <div class="form-group">
                <div>@Html.LabelFor(model => model.User.EmployeeNumber)</div>
                <div>@Html.TextBoxFor(model => model.User.EmployeeNumber, new { @class = "form-control" })</div>
                <small class="validation-message form-text text-danger">@Html.ValidationMessageFor(model => model.User.EmployeeNumber)</small>
            </div>

            <div class="form-group">
                <div>@Html.LabelFor(model => model.User.AssociateTitle, "Associate Title")</div>

                <div>@Html.DropDownListFor(model => model.User.AssociateTitle, new SelectList(Model.Lists.AssociateTitle, "Value", "Text", (int)Model.User.AssociateTitle), new { @title = "Select your title.", @class = "form-control" })</div>
                <small class="validation-message form-text text-danger">@Html.ValidationMessageFor(model => model.User.AssociateTitle)</small>
            </div>

            <button class="btn btn-primary form-control mobile-content" id="btnSignUp" name="btnSubmit" value="signup">Sign-Up</button>
        </div>

        @*<div value="Notification">
            @*<input type="checkbox" name="Notifications" value="Manager"> Are you a manager?<br>*@
        @*<input type="checkbox" name="Notifications" value="Email"> Receive Email Notifications<br>
            <input type="checkbox" name="Notifications" value="Textr"> Receive Text Notificatons<br>*@
        @*</div>*@

    </div>

    if (Model.User.LoginFailed)
    {
        <span class="login-failed">Failed to login. Please try again.</span>
    }
}
<script type="text/javascript">
    $("#User_FirstName").focus();
</script>

