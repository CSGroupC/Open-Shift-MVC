
@{
    var user = (Open_Shift.Models.User)Model.User;
}
<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.8.1/css/all.css" integrity="sha384-50oBUHEmvpQ+1lW4y57PTFmhCaXp0ML5d60M1M7uH2+nqUivzIebhndOJK28anvf" crossorigin="anonymous" />
    <link rel="stylesheet" href="https://www.w3schools.com/w3css/4/w3.css" />
    <script src="~/Scripts/jquery-3.3.1.js"></script>

    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")

    @RenderSection("Styles", false)
    <title>@ViewBag.Title</title>
</head>
<body>
    <div class="">
        <div id="frankie-bar" class="w3-bar w3-light-grey w3-border w3-xlarge">
            <a href="~/Home/Index" class="w3-bar-item w3-button w3-green" title="Home"><i class="fa fa-home"></i></a>
            @if (user.IsAuthenticated)
            {
                <a href="~/Main/Index" class="w3-bar-item w3-button" title="Main"><i class="fas fa-bars"></i></a>
                <a href="~/Profile/Index" class="w3-bar-item w3-button" title="Profile"><i class="fa fa-address-card"></i></a>
                <a href="~/Profile/SignOut" class="w3-bar-item w3-button" title="Sign-out"><i class="fas fa-sign-out-alt"></i></a>
            }
            else
            {
                <a href="~/Profile/SignIn" class="w3-bar-item w3-button" title="Sign-in"><i class="fas fa-sign-in-alt"></i></a>
                <a href="~/Profile/SignUp" class="w3-bar-item w3-button" title="Sign-up"><i class="fas fa-user"></i></a>
            }
        </div>
    </div>
    <div id="workspace">
        @RenderBody()
    </div>
</body>
</html>
