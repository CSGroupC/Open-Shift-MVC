@model Open_Shift.ViewModels.AvailabilityViewModel
@using Newtonsoft.Json;
@{
    ViewBag.Title = "Availability";
    Layout = "~/Views/Shared/UserLayout.cshtml";
}

@section Styles {
    <link href="@Url.Content("~/Content/calendar.css")" rel="stylesheet" type="text/css" />
}

<h1 class="text-center mb-4">Availability</h1>
<div id="availability-calendar"></div>
<div id="availability-data"
     data-associate="@JsonConvert.SerializeObject(Model.User)"
     data-availabilities="@JsonConvert.SerializeObject(Model.Availabilities)"></div>
<script type="module" src="../Scripts/availability-script.js">
</script>